<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background_gradient"
    tools:context=".LoginActivity">

<ImageView
    android:layout_width="110sp"
    android:layout_height="110sp"
    android:layout_marginTop="30sp"
    android:src="@drawable/evolveme300by300"
    android:layout_alignParentTop="true"
    android:layout_alignLeft="@+id/emailText"
    android:layout_alignStart="@+id/emailText"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColorHint="#40ffffff"
        android:ems="10"
        android:textColor="#ffffff"
        android:id="@+id/emailText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="#40ffffff"
        android:ems="10"
        android:textColor="#ffffff"
        android:id="@+id/passwdText"
        android:layout_below="@+id/emailText"
        android:layout_alignLeft="@+id/emailText"
        android:layout_alignStart="@+id/emailText"
        android:layout_marginTop="25dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anmeldung"
        android:id="@+id/login_button"
        android:textColor="#ffffff"
        android:background="#1A95A3"
        android:layout_below="@+id/passwdText"
        android:layout_alignLeft="@+id/passwdText"
        android:layout_alignStart="@+id/passwdText"
        android:layout_marginTop="35dp"
        android:layout_alignRight="@+id/passwdText"
        android:layout_alignEnd="@+id/passwdText"/>
</RelativeLayout>
