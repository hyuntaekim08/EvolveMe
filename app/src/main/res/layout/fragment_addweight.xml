<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".AddWeightActivity">
    <TextView
        android:id="@+id/titletextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/addweightfragment"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:paddingTop="20dp"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/cameraImageView"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/defaultweightimage"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        android:layout_above="@+id/tableLayout"
        android:layout_alignRight="@+id/imageButtonCamera"
        android:layout_alignEnd="@+id/imageButtonCamera"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:stretchColumns="*"
        android:background="#80196372"
        android:id="@+id/tableLayout">

        <TableRow>
            <TextView
                android:id="@+id/TextView01"
                android:text="Datum"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_column="1"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/TextViewDate"
                android:text="----------"
                android:textColor="#F4BB33"/>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A97A5"/>
        <TableRow>
            <TextView
                android:id="@+id/TextView03"
                android:text="Uhrzeit"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_column="1"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/TextViewTime"
                android:text="----------"
                android:textColor="#F4BB33"/>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A97A5"/>
        <TableRow>
            <TextView
                android:id="@+id/TextView05"
                android:text="Gewicht"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_column="1"
                android:textColor="#ffffff"/>
            <EditText
                android:id="@+id/TextViewWeight"
                android:hint="Hier berÃ¼hren"
                android:textColorHint="#F4BB33"
                android:background="@null"
                android:inputType="number"
                android:textColor="#F4BB33"/>
        </TableRow>
    </TableLayout>
    <ImageButton
        android:id="@+id/imageButtonCamera"
        android:layout_width="105dp"
        android:layout_height="100dp"
        android:scaleType="fitEnd"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dip"
        android:src="@drawable/icon_camera"/>
</RelativeLayout>